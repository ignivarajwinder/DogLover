<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:orientation="vertical"
    android:background="@color/white_transparent">

    <!--android:layout_marginBottom="@dimen/dimens_2p5dp"-->
    <!--android:layout_marginLeft="@dimen/dimens_5dp"-->
    <!--android:layout_marginRight="@dimen/dimens_5dp"-->
    <!--android:layout_marginTop="@dimen/dimens_2p5dp"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_transparent">


        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:background="?attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_menu_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <ProgressBar
                    android:id="@+id/homeprogress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/menu_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:text="men item"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="@dimen/textSizeItemTitle"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <biriinfotech.com.doglover.ui.customviews.EllipsizingTextView
                    android:id="@+id/tv_menu_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:inputType="textMultiLine"
                    android:ellipsize="marquee"
                    android:singleLine="false"
                    android:textSize="@dimen/textSizeItemDescrip"
                    android:maxLines="2"
                    android:text="kjhodfn gjngr gkr gr gjr g" />

                <LinearLayout
                    android:id="@+id/ll_watch_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:layout_marginBottom="@dimen/dimens_10dp"
                    android:gravity="right|center">
                    <TextView
                        android:id="@+id/tv_watch_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Watch Video"
                        android:padding="3dp"
                        android:layout_marginRight="@dimen/dimens_15dp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_with_round_corners"
                        android:gravity="center"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <!--<LinearLayout-->

            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp"-->
            <!--android:background="?attr/selectableItemBackground"-->
            <!--android:orientation="vertical" />-->

    </RelativeLayout>
</LinearLayout>